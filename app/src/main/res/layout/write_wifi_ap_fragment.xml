<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
                name="viewModel"
                type="com.jh.uniteticketwriter.ui.write.wifi.WriteWifiApViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card_background_color"
            tools:context=".ui.write.wifi.WriteWifiApFragment">

        <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                bind:layout_constraintEnd_toEndOf="parent"
                bind:layout_constraintStart_toStartOf="parent"
                bind:layout_constraintTop_toTopOf="parent">

            <EditText
                    android:id="@+id/wifi_ap_ssid_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="SSID"
                    android:text="@={viewModel.ssid}" />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/wifi_ap_auth_type_caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="Auth type:" />

                <Spinner
                        android:id="@+id/wifi_ap_auth_type_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:entries="@array/wifi_auth_types" />

            </LinearLayout>

            <EditText
                    android:id="@+id/wifi_ap_user_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="User Name"
                    android:hint="User name"
                    android:text="@={viewModel.userName}"
                    android:visibility="@{viewModel.userNameVisibility==0 ? View.VISIBLE : View.GONE}" />


            <EditText
                    android:id="@+id/wifi_ap_password_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Password"
                    android:text="@={viewModel.password}" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>